{
     /** 
    * Visual Stuido Code 设置文件
    * @`13 
    */


    // theme
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "One Dark Pro",
    "material-icon-theme.folders.theme": "specific",
    "workbench.panel.location": "bottom",
    "explorer.confirmDelete": false,    


    // font
    // 以像素为单位控制字号。
    "editor.fontSize": 18,
      
    // 控制字体系列。 Windows
    "editor.fontFamily": "Consolas, 微软雅黑",

    // file ignore
     // 配置 glob 模式以在搜索中排除文件和文件夹。
     // 例如，文件资源管理器根据此设置决定文件或文件夹的显示和隐藏。
    "files.exclude": {
        // general
        "*.vscode*.": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/**.tld_set":true,

        // git & svn
        "**/.git": true,
        "**/.svn": true,

        // Python
        "**/.pyc": true,
        "**/**.pyc": true,
        "**/.pyo": true,
        "**/**.pyo": true,

        // Vim
        "*.swp": true,
        "*./.*swp": true,
        "*.swo": true,
        "*./.*swo": true,

        // JetBrain
        "*.idea*.": true,
        ".idea":true,
        "**/.idea":true,

        // Scala
        "project" :true,
        "target" :true
      },
    
    
    // git
    "git.path": "C:/SoftWare/Git/cmd/git.exe",
    "extensions.ignoreRecommendations": true,
    
    // Python

    // python代码规范化 - flask8
    // "python.linting.flake8Enabled": true,
    
    // python代码格式化 - yapf
    "python.formatting.provider": "yapf",
    "explorer.confirmDragAndDrop": false,
    
    // Code File
    "files.associations": {
        "*.asp": "vbscript"
    },
    // 控制编辑器是否应在键入后自动设置行的格式
    "editor.formatOnType": true,
    
    // tencent proxy
    "http.proxy": "http://dev-proxy.oa.com:8080",

    // code-runner
    "code-runner.runInTerminal": false,
}